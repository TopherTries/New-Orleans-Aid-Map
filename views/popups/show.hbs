<div class="row">
    <div class="col s12 m8">
        <h3>{{popup.title}}
            <small>{{{editIcon popup.user user popup._id false}}}</small>
        </h3>
        <div class="card popup">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{popup.body}}}
                {{{popup.menu}}}
                {{{popup.hours}}}
                <div>{{{popup.location.formattedAddress}}}</div>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{popup.user.displayName}}</span>
                <img src="{{popup.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/popups/user/{{popup.user._id}}">More From {{popup.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>