<h1 id="index">Resources</h1>
<div id="index" class="row">
    {{#each popups}}
        <div class="col s6 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon user ../user _id}}}
                    <form action="/popups/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate body 150)}}</p>
                    <p>{{hours}}</p>
                    <p>{{location.formattedAddress}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}">
                        <a href="/popups/user/{{user._id}}">{{user.displayName}}</a>
                    </div>                    
            </div>
                <div class="card-action center-align">
                        <a href="/popups/{{_id}}" class="btn grey">Expand</a>
                </div>
            </div>
        </div>
        
    {{else}}
        <p>No resources to display.</p>
    {{/each}}
    
</div>